{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    },
    {
      "source": "/", // <-- Jika request ke root
      "destination": "/frontend/index.html" // <-- Sajikan index.html dari frontend
    },
    {
      "source": "/(.*)", // <-- Untuk semua path lainnya
      "destination": "/frontend/$1" // <-- Sajikan dari folder frontend
    }
  ],
  "builds": [
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**", // <-- Kembali ke "frontend/**"
      "use": "@vercel/static",
      "config": {
        "distDir": "frontend"
      }
    }
  ]
}
