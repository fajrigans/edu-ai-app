{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**", // <--- Pastikan ini "frontend/**"
      "use": "@vercel/static",
      "config": {
        "distDir": "frontend"
      }
    }
  ],
  "routes": [              // <--- Pastikan bagian "routes" ini ADA
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html" // <--- Dan pastikan aturan ini ADA
    }
  ]
}
