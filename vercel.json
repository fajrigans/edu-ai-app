{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/index.html", // <--- Ubah ini: target langsung index.html
      "use": "@vercel/static",       // <--- Ubah ini: gunakan @vercel/static
      "config": {
        "distDir": "frontend"       // <--- distDir tetap sama, menunjukkan root statis
      }
    }
  ]
}
