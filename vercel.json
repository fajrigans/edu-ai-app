{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**", // <--- KEMBALIKAN KE INI
      "use": "@vercel/static",
      "config": {
        "distDir": "frontend"
      }
    }
  ],
  "routes": [              // <--- BAGIAN INI SANGAT PENTING
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html", "/frontend/script.js", "/frontend/style.css" // <--- Ini akan menyajikan index.html sebagai root
    }
  ]
}
